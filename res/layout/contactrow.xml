<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
	    android:padding="0px">
	
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_height="fill_parent" android:paddingLeft="5px" android:layout_weight="1" android:layout_width="wrap_content">
		    
	    	<TextView android:text="Name, Person" android:id="@+id/contactrow_name" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" android:shadowDx=".4" android:shadowDy=".3" android:shadowColor="#90000000" android:gravity="center_vertical" android:ellipsize="marquee" android:shadowRadius="4.5" android:textSize="24px"/>
	    	
	    </LinearLayout>
	    
	    <LinearLayout 
	    android:orientation="vertical"
	    android:gravity="right" android:layout_height="fill_parent" android:paddingRight="5px" android:paddingLeft="5px" android:layout_width="wrap_content" android:paddingBottom="0px" android:paddingTop="0px">
			<TextView android:text="company" android:id="@+id/contactrow_company" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#3070f0" android:ellipsize="end" android:singleLine="true"/>
			<TextView android:text="phone" android:id="@+id/contactrow_phone" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:ellipsize="marquee"/>
			
			
		</LinearLayout>
	
	</LinearLayout>

	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="2px">	
			<TextView android:text="title" android:id="@+id/contactrow_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:ellipsize="marquee" android:paddingLeft="15px"/>
		    <TextView android:text="office" android:id="@+id/contactrow_office" android:layout_height="wrap_content" android:singleLine="true" android:ellipsize="marquee" android:layout_width="fill_parent" android:gravity="right" android:paddingRight="5px"/>
	</LinearLayout>	

</LinearLayout>
